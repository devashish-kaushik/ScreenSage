{
    "manifest_version": 2,
    "name": "ScreenSage",
    "version": "0.0.2",

    "author": "Devashish Kaushik for Team ScreenSage",
    
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "web_accessible_resources": ["sagemode.html"],

    "description": "A website blocker that helps make your screentime more healthy and controlled, and leads to Pratyāhāra in a world full of distractions.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "permissions": [
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "<all_urls>"
      ]
}