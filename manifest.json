{
    "manifest_version": 3,
    "name": "ScreenSage",
    "version": "1.0.0.0",

    "author": "Devashish Kaushik for Team ScreenSage",
    
    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_icon": "icons/icon16.png",
        "default_popup": "popup/popup.html"
    },

    "web_accessible_resources": [{
        "resources": ["sagemode.html"],
        "matches": ["<all_urls>"]
    }],

    "description": "A website blocker that helps make your screentime more healthy and controlled, and leads to Pratyāhāra in a world full of distractions.",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "permissions": [
        "storage",
        "webRequest",
        "declarativeNetRequestWithHostAccess",
        "tabs"
      ],

      
    "host_permissions": ["<all_urls>"],

    "declarative_net_request" : {
        "rule_resources" : [{
          "id": "fullRuleset",
          "enabled": true,
          "path": "rules.json"
        }]
      }
}